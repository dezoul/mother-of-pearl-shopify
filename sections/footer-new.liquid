{% schema %}
{
  "name": "Footer New",
  "settings": [
    {
      "type": "richtext",
      "id": "footer-content",
      "label": "Footer Content",
      "default": "<p>Your default footer content</p>"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Brands Menu"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Hardware Menu"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Kitchen Menu"
    },
    {
      "type": "link_list",
      "id": "menu_4",
      "label": "Working Menu"
    },
    {
      "type": "link_list",
      "id": "sub_links",
      "label": "Sub Links Menu"
    }
  ],
  "presets": [
    {
      "name": "footer v2.0",
