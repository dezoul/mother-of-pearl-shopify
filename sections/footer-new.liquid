<footer class="p-5p py-16">
  <div class="max-w-screen-xl mx-auto grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-5 gap-x-16">
    <div class="col-span-full lg:col-span-2 p-4">
      <a href="/">
        <h2 class="logo text-2xl font-wide uppercase font-medium mb-8">
          Mother of Pearl <br>
          and sons trading
        </h2>
      </a>
      <div>
        {{ section.settings['footer-content'] }}
      </div>
    </div>

    <div class="col-span-1 p-4">
      <h4 class="font-wide text-sm uppercase mb-8">
        Brands <br>
        we stock
      </h4>
      <nav>
        {%- for link in linklists[section.settings.menu_1].links -%}
          <a href="{{ link.url }}" class="">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </nav>
    </div>

    <div class="col-span-1 p-4">
      <h4 class="font-wide text-sm uppercase mb-8">
        Architectural <br>
        hardware
      </h4>
      <nav>
        {%- for link in linklists[section.settings.menu_2].links -%}
          <a href="{{ link.url }}" class="">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </nav>
    </div>

    <div class="col-span-1 p-4">
      <h4 class="font-wide text-sm uppercase mb-8">
        Kitchen <br>
        & Joinery
      </h4>
      <nav>
        {%- for link in linklists[section.settings.menu_3].links -%}
          <a href="{{ link.url }}" class="">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </nav>
      <h4 class="font-wide text-sm uppercase mb-8 mt-8">
        Working <br>
        with us
      </h4>
      <nav>
        {%- for link in linklists[section.settings.menu_4].links -%}
          <a href="{{ link.url }}" class="">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </nav>
    </div>
  </div>
</footer>
