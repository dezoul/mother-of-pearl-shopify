<!-- sections/product_extra_details.liquid -->
{% comment %} 
Richtext section with options to display buttons and headings.

Globals:
- settings.layout_horizontal: horizontaly margin
{% endcomment %}<section class=" {{ section.settings.visibility }} {{ section.settings.color_scheme }}  {{ section.settings.color_border }} {{ section.settings.style_border }}"> <div class="{{ settings.layout_horizontal }}"style="  padding-top:{{ section.settings.spacing_top }}px;  padding-bottom:{{ section.settings.spacing_bottom }}px;">

    <div class="">
      <div class="md:w-auto w-full">
        {%- unless section.settings.heading == blank -%}
          <h3 class="font-wide foont-bold">{{ section.settings.heading }}</h3>
        {%- endunless -%}
        <div class="grid grid-cols-5 gap-4">
          <div class="col-span-1">
            <h4 class="text-[1.25rem]">Size</h4>
            <p>{{ product.metafields.custom.size_details }}</p>
          </div>
          <div class="col-span-2">
            <h4 class="text-[1.25rem]">Materials</h4>
            <p>{{ product.metafields.custom.materials_details }}</p>
          </div>
          <div class="col-span-2">
            <h4 class="text-[1.25rem]">Installation Method</h4>
            <p>{{ product.metafields.custom.installation_method_details }}</p>
          </div>

        </div>
        <div>
          <h4 class=" pt-8 text-[1.4rem]">
            {{ product.metafields.custom.recommendation_text }}
          </h4>
        </div>
      </div>
    </div>

  </div>
</section>

