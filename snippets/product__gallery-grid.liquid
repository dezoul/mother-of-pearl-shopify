    {% endif %}

    {%- comment -%}arrows{%- endcomment -%}
    {% if product.media.size > 1 %}
      <div x-show="show_arrows" class="md:block top-1/2 left-4 absolute z-10 hidden -translate-y-1/2">
        <button class="btn btn--plain btn--small shadow-sm"
          title="{{ 'general.media.previous_slide' | t }}"
          {% if settings.enable_animations %}
            x-transition:enter="animation-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="animation-300"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
          {% endif %}
          x-cloak
          @click="scrollBack();">
          {% render 'component__icon', icon: 'arrow-left', size: '20', class: '' %}
        </button>
      </div>
      <div x-show="show_arrows" class="md:block top-1/2 right-4 absolute z-10 hidden -translate-y-1/2">
        <button class="btn btn--plain btn--small shadow-sm"
          title="{{ 'general.media.next_slide' | t }}"
          {% if settings.enable_animations %}
            x-transition:enter="animation-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="animation-300"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
          {% endif %}
          x-cloak
          @click="scrollNext();">
          {% render 'component__icon', icon: 'arrow-right', size: '20', class: '' %}
        </button>
      </div>
    {% endif %}
    
    {%- comment -%}slides{%- endcomment -%}
    <div class="whitespace-nowrap snap-x hidescrollbar padding--l-gap padding--r-gap md:px-0 md:margin--l-gap md:margin--r-gap inline-flex w-full overflow-x-auto overflow-y-hidden text-center"
      style="
        gap: {{ settings.layout_gap_size }}px;"
      x-init="setTimeout(function(){ if (isOverflown($el)) show_arrows = true}, 600)" 
      x-ref="slider">

      {% for media in product.media %}
        {% case media.media_type %}
          {% when 'image' %}
            <div class="relative snap-center flex-none border--width border--radius overflow-hidden
              {{ section.settings.image_border }}
              {{ media | handle }} 
              {% if section.settings.enable_zoom %}cursor-zoom-in{% endif %}  
              {% if product.media.size > 1 %}w-4/5 {% else %} w-full{% endif %}"
              {% if section.settings.enable_variant_images %}
                x-show="'{{ media.alt | handle }}'.includes(variantHandle)"
                x-cloak
              {% endif %}  
              {% if section.settings.enable_zoom %}
                @click="fullscreen = true; hide_header = true;"
              {% endif %}   
              x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
              x-bind:data-slide="{{ forloop.index0 }}">
              <div class="overflow-hidden object-cover h-full
                {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}
                {{ section.settings.media_color_scheme }}">
                {% if section.settings.media_object-sizing == "cover" %}
                  {% capture image_class %}w-full h-full object-cover {{ section.settings.media_color_scheme }}{% endcapture %}
                {% else %}
                  {% capture image_class %}w-full h-full object-contain {{ section.settings.media_color_scheme }}{% endcapture %}
                {% endif %}
                {{ media
                  | image_url: width: 1400 
                  | image_tag: style: 'object-fit:cover', class: image_class, loading: 'lazy', alt: media.alt }}
              </div>
              {% if section.settings.enable_alt == true and media.alt != product.title %}
                <div class="type--smaller absolute bottom-0 w-full p-2 text-left whitespace-normal opacity-75">
                  {{ media.alt }}
                </div>
              {% endif %}
            </div>
            
          {% when 'external_video' %}
            <div class="relative snap-center flex-none border--width border--radius overflow-hidden
              {{ section.settings.image_border }}
              {% if product.media.size > 1 %}w-4/5 {% else %} w-full{% endif %}"
              x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
              x-bind:data-slide="{{ forloop.index0 }}">
              <div class="bottom-2 left-2 absolute z-10">
                {% capture badge_content %}
                  {% render 'component__icon', icon: 'play', size: '16' %}
                {% endcapture %}
                {% render 'component__badge', 
                  color: 'body',
                  text: 'text',
                  icon: '',
                  content: badge_content %}
              </div>
              <div class="overflow-hidden object-cover 
                {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}
                {{ section.settings.media_color_scheme }}">
                <div class="flex items-center">
                  <div class="aspect-video aspect-w-16 aspect-h-9 object-cover w-full">
                    {% if media.host == 'youtube' %}
                      {{ media | external_video_url: color: 'white' | external_video_tag: class: 'w-full h-full aspect-video max-w-full' }}
                    {% elsif media.host == 'vimeo' %}
                      {{ media | external_video_url: loop: '1', muted: '1' | external_video_tag: class: 'w-full h-full aspect-video max-w-full' }}
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>

          {% when 'video' %}
            <div class="relative snap-center flex-none border--width border--radius overflow-hidden
              {{ section.settings.image_border }}
              {% if product.media.size > 1 %}w-4/5 {% else %} w-full{% endif %}"
              x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
              x-bind:data-slide="{{ forloop.index0 }}">
              <div class="bottom-2 left-2 absolute z-10">
                {% capture badge_content %}
                  {% render 'component__icon', icon: 'play', size: '16' %}
                {% endcapture %}
                {% render 'component__badge', 
                  color: 'body',
                  text: 'text',
                  icon: '',
                  content: badge_content %}
              </div>
              <div class="overflow-hidden object-contain 
                {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}
                {{ section.settings.media_color_scheme }}">
                <div class="flex items-center">
                  {{ media | video_tag: autoplay: true, loop: true, mute: true, controls: true, class: 'w-full h-full' }}
                </div>
              </div>
            </div>
            
          {% when 'model' %}
            <div class="relative snap-center flex-none border--width border--radius overflow-hidden
              {{ section.settings.image_border }}
              {% if product.media.size > 1 %}w-4/5 {% else %} w-full{% endif %}" 
              x-intersect:enter.half="gallery_index = {{ forloop.index0 }};"
              x-bind:data-slide="{{ forloop.index0 }}" data-media-id="{{ media.id }}">
              <div class="bottom-2 left-2 absolute z-10">
                {% capture badge_content %}
                  {% render 'component__icon', icon: 'box', size: '16' %}
                {% endcapture %}
                {% render 'component__badge', 
                  color: 'body',
                  text: 'text',
                  icon: '',
                  content: badge_content %}
              </div>
              <div class="bottom-2 absolute left-auto right-auto z-10 w-full">
                <button class="btn btn--small btn--secondary"
                  data-shopify-xr
                  data-shopify-model3d-id="{{ media.id }}"
                  data-shopify-title="{{ product.title | escape }}"
                  data-shopify-xr-hidden>
                  {{ 'general.media.view_in_space' | t }}
                </button>
              </div>
              <div class="overflow-hidden object-contain h-full
                {{ section.settings.media_ratio }}
                {{ section.settings.media_color_scheme }}">
                <div class="flex items-center h-full">
                  {{ media | model_viewer_tag: class: 'w-full h-full' }}
                </div>
              </div>
            </div>

        {% endcase %}
      {% endfor %}
      
    </div>

    {%- comment -%}indicators{%- endcomment -%}
    {% if product.media.size > 1 and section.settings.enable_variant_images == false %}
      <div class="bottom-4 absolute left-0 right-0 flex flex-wrap items-center justify-center gap-2 px-4 text-center">
        {% for media in product.media %}
          <button aria-label="gallery_grid_button_{{ forloop.index0 }}" class="color__bg-text animation-100 border--radius w-3 h-1 opacity-25" 
            :class="{ '!opacity-100': gallery_index === {{ forloop.index0 }} }"
            @click="gallery_index_scroll = {{ forloop.index0 }}; scrollToIndex(gallery_index_scroll);"></button>
        {% endfor %}
      </div>
    {% endif %}

  </div>
</div>

{%- assign first_3d_model = product.media | where: "media_type", "model" | first -%}
{% if first_3d_model %}
  <script type="application/json" id="ProductJSON-{{ product.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
  <script>
    function setupShopifyXr(){
      if (!window.ShopifyXR) {
        document.addEventListener('shopify_xr_initialized', function() {
          setupShopifyXr();
        });
      }else{
        document.querySelectorAll('[id^="ProductJSON-"]').forEach((modelJSON) => {
          window.ShopifyXR.addModels(JSON.parse(modelJSON.textContent));
          window.ShopifyXR.setupXRElements();
          modelJSON.remove();
        });
      }
    }

    window.Shopify.loadFeatures([{
      name: 'shopify-xr',
      version: '1.0',
      onLoad: setupShopifyXr
    }]);
  </script>
{% endif %}
