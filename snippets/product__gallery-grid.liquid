<!-- snippets/product__gallery-grid.liquid -->
{% comment %} 
  Block to display product photos in a grid.

  Accepts:
    - featured: boolean to assign product object from section settings, set this to true if block is used within a section rather than product template
  
  Usage:
    {% render 'product__gallery-grid', 
      featured: true %}

  Globals:
    - settings.savings_badge: boolean to display savings badge

  Possible enhancements:
    - Add global setting to set grid gap width and apply to entire theme.
    - Add alterntive grid layouts (e.g. 2x2, 3x3, 4x4, etc.).
    - Move position of indicators to avoid overlap of alt text.
  
  Pro tips:
    - When a product only has one photo the image will not be shown in a grid.
    - Mobile will default to the slider layout regardless.
{% endcomment %}

{% if featured %}
  {%- assign product = section.settings.product -%}
{% endif %}

<div class="top-0 sticky hidden md:grid items-start h-full padding--r-gap padding--t-gap padding--b-gap
  {{ section.settings.layout_gallery_size }}
  {% if product.media.size > 1 %}grid-cols-2{% endif %}"
  style="
    gap: {{ settings.layout_gap_size }}px;">

  {%- comment -%}badges{%- endcomment -%}
  {% if section.settings.show_product_badges %}
    <div class="absolute top-0 left-0 z-10 flex flex-wrap w-full gap-2 p-2 whitespace-normal">

      {%- if product.metafields.reviews.rating.value != blank -%}
        {% capture badge_content %}
        {% assign rating = product.metafields.reviews.rating.value | strip %}
        {{ rating | times: 1 | round: 2 }}
          {% render 'component__icon', icon: 'star', size: '12', class: 'ml-1' %} 
        {% endcapture %}
        {% render 'component__badge', 
          color: 'overlay-2',
          text: 'text',
          icon: '',
          content: badge_content %}
      {%- endif -%}

      {% for tag in product.tags %}
        {% if tag contains "badge_" %}
          {% capture badge_content %}{{ tag | remove: "badge_" }}{% endcapture %}
          {% render 'component__badge', 
            color: 'secondary',
            text: 'secondary'
            icon: '',
            content: badge_content %}
        {% endif %}
      {% endfor %}

      {% if settings.savings_badge != "none" %}
        {% if product.price < product.compare_at_price %}
          {% if settings.savings_badge == "percent" %}
            {% capture badge_content %}{{ discount_percentage }}{% endcapture %}
            {% capture a %}{{ product.compare_at_price | minus: product.price }} {% endcapture %}
            {% capture b %}{{ a | times: 100 }} {% endcapture %} 
            {% capture discount_percentage %}{{ b | divided_by: product.compare_at_price | round }} {% endcapture %} 
            {% capture badge_content %} {{ 'products.general.save' | t }} {{ discount_percentage | strip | append: '%' }} {% endcapture %}
          {% else %}
            {% capture discount_amount %}{{ product.compare_at_price | minus: product.price | money }}{% endcapture %}
            {% capture badge_content %}{{ 'products.general.save' | t }} {{ discount_amount }}{% endcapture %}
          {% endif %}
          {% render 'component__badge', 
            color: 'secondary',
            text: 'secondary'
            icon: '',
            content: badge_content %}
        {% endif %}
      {% endif %}
      
    </div>
  {% endif %}
  
  {% for media in product.media %}
    {% case media.media_type %}
      {% when 'image' %}
        <div class="relative border--width border--radius overflow-hidden
          {{ section.settings.image_border }}
          {{ media | handle }}
          {% if section.settings.enable_zoom %}cursor-zoom-in{% endif %}"
            {% if section.settings.enable_variant_images %}
              x-show="'{{ media.alt | handle }}'.includes(variantHandle)"
              x-cloak
            {% endif %}
            {% if section.settings.enable_zoom %}
              @click="fullscreen = true; hide_header = true;"
            {% endif %}>
          <div class="overflow-hidden object-cover
            {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}
            {{ section.settings.media_color_scheme }}">
            {% if section.settings.media_object-sizing == "cover" %}
              {% capture image_class %}w-full h-full object-cover {{ section.settings.media_color_scheme }}{% endcapture %}
            {% else %}
              {% capture image_class %}w-full h-full object-contain {{ section.settings.media_color_scheme }}{% endcapture %}
            {% endif %}
            {{ media
              | image_url: width: 1400 
              | image_tag: class: image_class, loading: 'lazy', alt: media.alt }}
          </div>
          {% if section.settings.enable_alt == true and media.alt != product.title %}
            <div class="type--smaller absolute bottom-0 w-full p-2 text-left whitespace-normal opacity-75">
              {{ media.alt }}
            </div>
          {% endif %}
        </div>

      {% when 'external_video' %}
        <div class="relative border--width border--radius overflow-hidden
          {{ section.settings.image_border }}">
          <div class="bottom-2 left-2 absolute z-10">
            {% capture badge_content %}
              {% render 'component__icon', icon: 'play', size: '16' %}
            {% endcapture %}
            {% render 'component__badge', 
              color: 'body',
              text: 'text',
              icon: '',
              content: badge_content %}
          </div>
          <div class="overflow-hidden object-cover
            {{ section.settings.media_color_scheme }}
            {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}">
            <div class="flex items-center">
              <div class="aspect-video aspect-w-16 aspect-h-9 object-cover w-full">
                {% if media.host == 'youtube' %}
                  {{ media | external_video_url: color: 'white' | external_video_tag: class: 'w-full h-full aspect-video max-w-full' }}
                {% elsif media.host == 'vimeo' %}
                  {{ media | external_video_url: loop: '1', muted: '1' | external_video_tag: class: 'w-full h-full aspect-video max-w-full' }}
                {% endif %}
              </div>
            </div>
          </div>
        </div>

      {% when 'video' %}
        <div class="relative border--width border--radius overflow-hidden
          {{ section.settings.image_border }}">
          <div class="bottom-2 left-2 absolute z-10">
            {% capture badge_content %}
              {% render 'component__icon', icon: 'play', size: '16' %}
            {% endcapture %}
            {% render 'component__badge', 
              color: 'body',
              text: 'text',
              icon: '',
              content: badge_content %}
          </div>
          <div class="overflow-hidden object-cover
            {{ section.settings.media_color_scheme }}
            {% if section.settings.enable_ratio %}{{ section.settings.media_ratio }}{% endif %}">
            <div class="flex items-center">
              {{ media | video_tag: autoplay: true, loop: true, mute: true, controls: true, class: 'w-full h-full' }}
            </div>
          </div>
        </div>

      {% when 'model' %}
        <div class="relative border--width border--radius overflow-hidden
          {{ section.settings.image_border }}">
          <div class="bottom-2 left-2 absolute z-10">
            {% capture badge_content %}
              {% render 'component__icon', icon: 'box', size: '16' %}
            {% endcapture %}
            {% render 'component__badge', 
              color: 'body',
              text: 'text',
              icon: '',
              content: badge_content %}
          </div>
          <div class="bottom-2 absolute left-auto right-auto z-10 w-full">
            <button
              class="btn btn--small btn--secondary"
              data-shopify-xr
              data-shopify-model3d-id="{{ media.id }}"
              data-shopify-title="{{ product.title | escape }}"
              data-shopify-xr-hidden>
              {{ 'general.media.view_in_space' | t }}
            </button>
          </div>
          <div class="overflow-hidden object-cover h-full
            {{ section.settings.media_color_scheme }}
            {{ section.settings.media_ratio }}">
            <div class="flex items-center h-full">
              {{ media | model_viewer_tag: class: 'w-full h-full' }}
            </div>
          </div>
        </div>

    {% endcase %}
  {% endfor %}

</div>

<div class="md:hidden 
  {{ section.settings.layout_gallery_size }}">
  <div class="margin--t-gap margin--b-gap relative flex w-full">

    {%- comment -%}badges{%- endcomment -%}
    {% if section.settings.show_product_badges %}
      <div class="absolute top-0 left-0 z-10 flex flex-wrap w-full gap-2 px-4 py-2 whitespace-normal">
    
        {%- if product.metafields.reviews.rating.value != blank -%}
          {% capture badge_content %}
          {% assign rating = product.metafields.reviews.rating.value | strip %}
          {{ rating | times: 1 | round: 2 }}
            {% render 'component__icon', icon: 'star', size: '12', class: 'ml-1' %} 
